# $Id$
# Maintainer: Michael Johnson <michaelpjohnson@gmail.com>

pkgname=anonymoud-pro-fonts
pkgver=1.002
_relver=1.002
pkgrel=1
pkgdesc="Anonymous Pro (2009) is a family of four fixed-width fonts designed with coding in mind."
url="http://www.marksimonson.com/fonts/view/anonymous-pro"
arch=(any)
license=(custom)
_tarname=AnonymousPro-$_relver
_dirname=AnonymousPro-$_relver.001
source=("$_tarname.zip::http://www.marksimonson.com/assets/content/fonts/AnonymousPro-$_relver.zip")
sha256sums=('86665847a51cdfb58a1e1dfd8b1ba33f183485affe50b53e3304f63d3d3552ab')

package() {
  cd $_dirname
  install -d "$pkgdir/usr/share/fonts/${pkgname%-fonts}"
  install -t "$pkgdir/usr/share/fonts/${pkgname%-fonts}" -m644 *.ttf
  install -Dm644 OFL.txt "$pkgdir/usr/share/licenses/$pkgname/OFL.txt"
}

# vim:set ts=2 sw=2 et:
